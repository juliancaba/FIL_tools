# -*- mode: makefile-gmake; coding: utf-8 -*-
DESTDIR ?= ~

FIL_ROOT  = /fil_testing

REMOTE_DPR_ROOT=./tools/remote_dpr
CREATE_PL_ROOT=./tools/create_pl
C2IPSRC_ROOT=./tools/c2IPsrc
CREATE_FILTEST_ROOT=./tools/create_filTest
CREATE_DOCKERFILES_ROOT=./tools/create_dockerfiles
PARTIALBIT_TOOL_ROOT = ./imports/zedboard-dpr/write_factory_bitstreams

TOOL_ROOTS = $(REMOTE_DPR_ROOT) $(CREATE_PL_ROOT) $(C2IPSRC_ROOT) $(CREATE_FILTEST_ROOT) $(CREATE_DOCKERFILES_ROOT) $(PARTIALBIT_TOOL_ROOT)

install:
	@for i in $(TOOL_ROOTS); do \
	  cd $$i; make -f install.mk DESTDIR=$(DESTDIR); cd - ;\
	done






